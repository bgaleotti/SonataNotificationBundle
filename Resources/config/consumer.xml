<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonata.notification.consumer.metadata" class="Sonata\NotificationBundle\Consumer\Metadata">
            <argument type="collection" />
        </service>

        <service id="sonata.notification.consumer.mailer" class="Sonata\NotificationBundle\Consumer\SwiftMailerConsumer" public="false">
            <argument type="service" id="mailer" />
        </service>

        <service id="sonata.notification.consumer.logger" class="Sonata\NotificationBundle\Consumer\LoggerConsumer" public="false">
            <argument type="service" id="logger" />
        </service>
    </services>
</container>
